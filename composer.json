{
    "name": "dbp/relay-mono-connector-payunity-bundle",
    "description": "A PayUnity connector for the mono bundle for the Relay API gateway",
    "type": "symfony-bundle",
    "license": "AGPL-3.0-or-later",
    "require": {
        "php": ">=8.2",
        "ext-intl": "*",
        "ext-json": "*",
        "dbp/relay-core-bundle": "^0.1.186",
        "dbp/relay-mono-bundle": "^0.5.0",
        "league/uri": "^6.5 || ^7.4",
        "symfony/framework-bundle": "^6.4",
        "doctrine/doctrine-migrations-bundle": "^3.3",
        "doctrine/migrations": "^3.3",
        "doctrine/orm": "^2.18 || ^3.2",
        "doctrine/dbal": "^3.8 || ^4.0",
        "symfony/uid": "^6.4",
        "ext-openssl": "*",
        "psr/log": "^1.1.4 || ^2.0.0 || ^3.0.0",
        "symfony/dependency-injection": "^6.4",
        "symfony/config": "^6.4",
        "symfony/console": "^6.4",
        "symfony/http-kernel": "^6.4",
        "symfony/http-foundation": "^6.4",
        "symfony/routing": "^6.4",
        "symfony/lock": "^6.4",
        "twig/twig": "^3.8",
        "guzzlehttp/guzzle": "^7.4",
        "psr/http-message": "^1.0 || ^2.0"
    },
    "require-dev": {
        "captainhook/captainhook": "^5.21",
        "friendsofphp/php-cs-fixer": "^3.50",
        "phpstan/phpstan": "^2.0.0",
        "phpstan/phpstan-phpunit": "^2.0.0",
        "phpstan/phpstan-symfony": "^2.0.0",
        "phpunit/phpunit": "^10.1",
        "symfony/browser-kit": "^6.4",
        "symfony/http-client": "^6.4",
        "symfony/monolog-bundle": "^3.10",
        "symfony/phpunit-bridge": "^7.0.4"
    },
    "autoload": {
        "psr-4": {
            "Dbp\\Relay\\MonoConnectorPayunityBundle\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Dbp\\Relay\\MonoConnectorPayunityBundle\\Tests\\": "tests/"
        }
    },
    "config": {
        "sort-packages": true,
        "platform": {
            "php": "8.2"
        }
    },
    "scripts": {
        "post-autoload-dump": "vendor/bin/captainhook install -f -s",
        "test": [
            "@php vendor/bin/phpunit"
        ],
        "phpstan": [
            "@php vendor/bin/phpstan analyze --ansi"
        ],
        "lint": [
            "@composer run cs",
            "@composer run phpstan"
        ],
        "cs-fix": [
            "@php vendor/bin/php-cs-fixer --ansi fix"
        ],
        "cs": [
            "@php vendor/bin/php-cs-fixer --ansi fix --dry-run --diff"
        ],
        "coverage": [
            "@php -dxdebug.mode=coverage vendor/bin/phpunit --coverage-html _coverage"
        ]
    }
}
